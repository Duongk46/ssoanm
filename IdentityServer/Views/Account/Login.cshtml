@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="tab-content w-50" style="margin-top:100px;">
    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <h3 style="text-align: center">Đăng nhập</h3>
        <form asp-controller="Account" class="mt-3" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="Username">Tài khoản</label>
                <input asp-for="Username" placeholder="Nhập tài khoản..." type="text" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label"  asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" placeholder="***" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <a asp-controller="Account" asp-action="Register" asp-route-returnurl="@Model.ReturnUrl" class="btn btn-outline-primary mt-3">Đăng ký</a>
                <button type="submit" class="btn btn-success mt-3">Đăng nhập</button>
            </div>
        </form>
    </div>
</div>
